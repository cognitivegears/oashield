{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Run OpenAPI Generator",
            "preLaunchTask": "Build CLI Runner",
            "request": "launch",
            "mainClass": "org.openapitools.codegen.OpenAPIGenerator",
            "projectName": "oashield",
            "classPaths": [
                "${workspaceFolder}/target/oashield-0.0.2.jar","${workspaceFolder}/target/oashield-cli.jar"
            ],
            // Add program arguments
            "args": [
                "generate",
                "-g",
                "modsecurity3",
                "-i",
                "${input:openapiFile}",
                "-o",
                "/home/vscode/test"
            ]
        }
    ],
    "inputs": [
        {
            "id": "openapiFile",
            "type": "promptString",
            "description": "Enter the path to the OpenAPI file",
            "default": "samples/petstore.yaml"
        }
    ]
}